<h1>What's on your mind ?</h1>

<form action="/posts/create-post" method="post" class="p-5" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Title</label>
    <input
      required
      name="title"
      type="text"
      class="form-control"
      id="title"
      aria-describedby="emailHelp"
      placeholder="Enter Post Title"
    />
  </div>
  
  <div class="form-group">
    <label for="content">Content</label>
    <textarea required rows="10" name="content" class="form-control" id="content" aria-describedby="emailHelp"placeholder="Write ..."></textarea>
  </div> 

  <div class="form-group">
    <label for="privacy">Set Post Privacy</label>
    <select class="form-control" id="privacy" name="privacy" required>
      <option value="private">Private</option>
      <option  value="public" selected>Public</option>
      <option  value="friends-only">Friends Only</option>
    </select>
</div>
<div class="form-group">
  <input 
  type="file"
  name="imageUrl"
  id="imageUrl"
  accept="images/*">
</div>
 
  <button type="submit" class="btn btn-primary mt-2">Post</button>

</form>

