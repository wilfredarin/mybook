<h1>What's on your mind ?</h1>

<form action="/posts/create-post" method="post" class="p-5">
  <div class="form-group">
    <label for="title">Title</label>
    <input
      required
      name="title"
      type="text"
      class="form-control"
      id="title"
      aria-describedby="emailHelp"
      placeholder="Enter Post Title"
    />
  </div>
  <div class="form-group">
    <label for="companyName">Content</label>
    <input
      required
      name="content"
      type="text-area"
      class="form-control"
      id="content"
      aria-describedby="emailHelp"
      placeholder="Write ..."
    />
  </div> 
  <button type="submit" class="btn btn-primary mt-2">Post</button>
</form>
